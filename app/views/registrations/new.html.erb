<%= form_with model: @user, url: registrations_path, method: :post do |form| %>
    <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
    <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>
  
    <div>
      <%= form.label :email_address, "Email" %>
      <%= form.email_field :email_address, required: true, autofocus: true %>
    </div>
  
    <div>
      <%= form.label :password, "Mật khẩu" %>
      <%= form.password_field :password, required: true %>
    </div>
  
    <div>
      <%= form.label :password_confirmation, "Xác nhận mật khẩu" %>
      <%= form.password_field :password_confirmation, required: true %>
    </div>
  
    <div>
      <%= form.submit "Đăng ký" %>
    </div>
  <% end %>
  
  <%= link_to "Đã có tài khoản? Đăng nhập", new_session_path %>
  