<%= form_with model: product, local: true, html: { multipart: true } do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
      <%= form.label :name %>
      <%= form.text_field :name, class: "input-field" %>
    </div>
  
    <div>
      <%= form.label :description %>
      <%= form.text_area :description, class: "input-field" %>
    </div>
  
    <div>
      <%= form.label :inventory_count %>
      <%= form.number_field :inventory_count, class: "input-field" %>
    </div>
  
    <div>
      <%= form.label :featured_image %>
      <%= form.file_field :featured_image, class: "input-field" %>
    </div>
  
    <div>
      <%= form.submit "Save Product", class: "submit-button" %>
    </div>
  <% end %>
  